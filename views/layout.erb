<body>
	<nav>
		<ul>
			<li><a href="/">Home</a></li>
			<% if session[:user_id] %>
				<li><a href="/sign-out">Sign out</a></li>
				<li><a href="/account">Account</a></li>
			<% else %>
				<li><a href="/sign-up">Sign up</a></li>
				<li><a href="/sign-in">Sign in</a></li>
			<% end %>
		</ul>
	</nav>
	<div id="notice">
		<%= flash[:notice] if flash[:notice] %>
	</div>
	<div id="error">
		<%= flash[:error] if flash[:error] %>
	</div>
<%= yield %>
	<img id="unicorn" src="http://67.media.tumblr.com/5ad3d554b65eb61f7a943ba1e68ec310/tumblr_inline_mywcvnmH1r1qellpe.gif" height="500px" width="500px" alt="">
