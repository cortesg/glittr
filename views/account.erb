<div class="container">
	<div id="infoBox">
		
		<!-- <strong>Username: </strong><%= @user.username %><br> -->
		<strong class="infoText"><%= @user.name %></strong><br>
		<strong class="infoText"><%= @user.username %><br></strong>
		<strong class="infoText">Age: </strong><strong class="infoText"><%= @user.age %></strong><br><br>
			<a class="linkText" href="/edit">Edit Account <strong>|</strong></a>
			<a class="linkText" href="/delete">Delete Account</a>
