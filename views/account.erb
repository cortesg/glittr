			<input id="accountContent" type="text" name="post" placeholder="How much you bench?">
			<input id="submit" class="submitButton" type="submit" onclick="ponySpin()">
		</form>
	</div>

	<div class="accountPostField">
		<% @posting.each do |p| %>
    		<div class="accountPosts"><%= p.posts %></div>
		<% end %>
	</div>

